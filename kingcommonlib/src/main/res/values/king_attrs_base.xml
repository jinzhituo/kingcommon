<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--**********************************************
    *                  xui popup                    *
    ***********************************************-->
    <attr name="xui_popup_bg" format="reference" />
    <attr name="xui_popup_arrow_down" format="reference" />
    <attr name="xui_popup_arrow_up" format="reference" />
    <attr name="xui_popup_arrow_up_margin_top" format="dimension" /> <!-- 一般与xui_popup_bg上阴影相等 -->
    <attr name="xui_popup_arrow_down_margin_bottom" format="dimension" /> <!-- 一般与xui_popup_bg下阴影相等 -->

    <attr name="xui_popup_width" format="dimension" />

    <attr name="xui_tip_popup_padding_top" format="dimension" />
    <attr name="xui_tip_popup_padding_left" format="dimension" />

    <!--XUIWrapContentListView-->
    <declare-styleable name="XUIWrapContentListView">
        <!--设置listView的最大高度-->
        <attr name="wclv_max_height" format="dimension" />
    </declare-styleable>

    <!--XUIWrapContentScrollView-->
    <declare-styleable name="XUIWrapContentScrollView">
        <!--设置ScrollView的最大高度-->
        <attr name="wcsv_max_height" format="dimension" />
    </declare-styleable>

    <!--正文内容文字大小-->
    <attr name="xui_config_size_content_text" format="dimension" />

    <attr name="xui_config_simple_list_item_height" format="dimension" />
    <attr name="xui_config_simple_list_icon_size" format="dimension" />
</resources>
